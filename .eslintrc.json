{
	"extends": [
		"next",
		"next/core-web-vitals",
		"plugin:storybook/recommended",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"eslint:recommended",
		"next/typescript"
	],
	"parser": "@typescript-eslint/parser",
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["@/*", "./*"],
					["@ui/*", "./_src/shared/ui/*"]
				],
				"extensions": [".ts", ".tsx"]
			}
		},
		"dirs": ["_src"]
	},
	"rules": {
		"no-unused-vars": "off",
		"react/display-name": "off",
		"no-mixed-spaces-and-tabs": "off"
	}
}
