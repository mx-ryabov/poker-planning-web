{
 "extends": [
  "next",
  "next/core-web-vitals",
  "plugin:storybook/recommended",
  "plugin:react/recommended",
  "plugin:react/jsx-runtime",
  "plugin:react-hooks/recommended",
  "eslint:recommended"
 ],
 "settings": {
    "import/resolver": {
        "alias": {
            "map": [
                ["@/*", "./*"],
                ["@ui/*", "./_src/shared/ui/*"]
            ],
            "extensions": [".ts", ".tsx"]
        }
    },
    "dirs": ["_src"]
 }
}
